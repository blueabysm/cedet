set mode "c++-mode"

set comment_start  "/**"
set comment_end    " *"
set comment_prefix " */"

template empty :time :user
----
/**
 * Copyright (C) {{YEAR}} {{AUTHOR}}
 */
----

template function-tag :tag
----
{{TYPE}} {{NAME}}({{#ARGS}}{{TYPE}} {{NAME}}{{#NOTLAST}},{{/NOTLAST}}{{/ARGS}})
{
    {{^}}
}
----

template doxygen-function :tag
----
/**
 * @name - {{NAME}} - $^${{#ARGS}}
 * @param {{NAME}} -{{/ARGS}}
 * @return {{TYPE}}
 */
----

template doxygen-function-group-start
----
/**
 * {{?GROUPNAME}}
 * @{
 */
----

template doxygen-function-group-end
----
/**
 * {{?GROUPNAME}}
 * @{
 */
----

;; end
